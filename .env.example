# Database
DATABASE_URL=postgresql://liticia_user:your_password@localhost:5432/liticia_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=8000

# DigitalOcean Spaces (S3-compatible)
SPACES_ENDPOINT=https://fra1.digitaloceanspaces.com
SPACES_REGION=fra1
SPACES_KEY=your_spaces_key_here
SPACES_SECRET=your_spaces_secret_here
SPACES_BUCKET=liticia-docs

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API
API_V1_PREFIX=/api/v1

# CORS (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Scraping
SCRAPING_USER_AGENT=Liticia Bot 1.0 (+https://liticia.com/bot)
SCRAPING_DELAY_SECONDS=2
SCRAPING_CONCURRENT_REQUESTS=2
SCRAPING_TIMEOUT_SECONDS=30

# Document Processing
MAX_DOCUMENT_SIZE_MB=50
DOCUMENT_PROCESSING_TIMEOUT_SECONDS=300

# Logging
LOG_LEVEL=INFO

# Sentry (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

